@page
@model portaBLe.Pages.GraphsModel
@{
    ViewData["Title"] = "Graphs Menu";
}

<h2>@ViewData["Title"]</h2>

<ul>
    @foreach (var link in Model.Links)
    {
        <li style="margin:20px 0;">
            <a asp-page="@link.Url" style="padding:10px 20px; background-color:#007bff; color:white; text-decoration:none; border-radius:5px;">
                @link.Title
            </a>
        </li>
    }
</ul>