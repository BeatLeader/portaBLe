@using portaBLe.Services
@inject IDynamicDbContextService DbService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - portaBLe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/portaBLe.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">portaBLe</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-area="" asp-page="/Ranking">Ranking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-area="" asp-page="/Leaderboards">Leaderboards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-page="/LeaderboardStats">Leaderboard Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-page="/MapOutliers">Outliers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-page="/Graphs">Graphs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-page="/DatabaseMetrics">DB Metrics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark db-aware-link" asp-page="/DatabaseComparison">DB Comparison</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @{
                            var availableDatabases = await DbService.GetAvailableDatabasesAsync();
                            var currentDb = Context.Request.Query["db"].FirstOrDefault() ?? DbService.GetMainDatabaseFileName();
                        }
                        <label class="me-2 mb-0 text-nowrap" for="dbSelector" style="font-size: 0.9rem;">Database:</label>
                        <select id="dbSelector" class="form-select form-select-sm" style="width: auto; min-width: 200px;" onchange="switchDatabase(this.value)">
                            @foreach (var db in availableDatabases)
                            {
                                <option value="@db.FileName" selected="@(db.FileName == currentDb)">@db.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - portaBLe - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // LocalStorage key for database selection
        const DB_STORAGE_KEY = 'portaBLe_selectedDatabase';

        // On page load, check localStorage and update URL if needed
        document.addEventListener('DOMContentLoaded', function() {
            const savedDb = localStorage.getItem(DB_STORAGE_KEY);
            const urlParams = new URLSearchParams(window.location.search);
            const urlDb = urlParams.get('db');
            
            // If we have a saved database but no db parameter in URL, redirect with the parameter
            if (savedDb && !urlDb) {
                urlParams.set('db', savedDb);
                const newUrl = window.location.pathname + '?' + urlParams.toString();
                window.location.href = newUrl;
                return;
            }
            
            // If URL has a db parameter, make sure it's saved to localStorage
            if (urlDb) {
                localStorage.setItem(DB_STORAGE_KEY, urlDb);
                // Update dropdown to reflect current selection
                const selector = document.getElementById('dbSelector');
                if (selector) {
                    selector.value = urlDb;
                }
            }
        });

        function switchDatabase(dbFileName) {
            // Save selection to localStorage
            localStorage.setItem(DB_STORAGE_KEY, dbFileName);
            
            // Get current URL
            var url = new URL(window.location.href);
            
            // Update or add the db parameter (this preserves all other existing query parameters)
            url.searchParams.set('db', dbFileName);
            
            // Reload the page with the new database parameter and all existing parameters
            window.location.href = url.toString();
        }

        // Optional: Add a function to clear the saved database
        function clearSavedDatabase() {
            localStorage.removeItem(DB_STORAGE_KEY);
        }

        // Update all navigation links to include the selected database
        function updateNavigationLinks() {
            const savedDb = localStorage.getItem(DB_STORAGE_KEY);
            if (!savedDb) return;

            // Update all links with the db-aware-link class
            document.querySelectorAll('.db-aware-link').forEach(link => {
                const href = link.getAttribute('href');
                if (href && !href.includes('db=')) {
                    const separator = href.includes('?') ? '&' : '?';
                    link.setAttribute('href', href + separator + 'db=' + encodeURIComponent(savedDb));
                }
            });
        }

        // Call updateNavigationLinks when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', updateNavigationLinks);
        } else {
            updateNavigationLinks();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>