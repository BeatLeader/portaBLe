            const scores = recalculatedData.scores.slice(0, 100);
            const labels = scores.map((_, i) => `#${i + 1}`);
            
            charts.totalPP = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Original PP',
                            data: scores.map(s => s.currentPP),
                            backgroundColor: 'rgba(54, 162, 235, 0.5)',
                            borderColor: 'rgba(54, 162, 235, 1)',
